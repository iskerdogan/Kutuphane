@using Kutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Books>
@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/ShowcaseLayout.cshtml";
}

<div class="container" id="Books">
    <div class="row">
        <div class="row justify-content-center text-center my-sm-5">
            <div class="col-lg-6">
                <h2 class="text-dark mb-0">Tüm Kitaplar</h2>
            </div>
        </div>
    </div>
</div>
<div class="container mt-sm-5 mt-3">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                @foreach (Books result in Model)
                {
                    <div class="col-sm-4 col-sm-offset-1">
                        <div class="col-md-10 col-sm-6">
                            <div class="card-container">
                                <div class="card">
                                    <div class="front">
                                        <div class="content">
                                            <img style="height:400px; width:300px" class="" src="@result.Image" />
                                        </div>
                                    </div> <!-- end front panel -->
                                    <div class="back">
                                        <div class="header">
                                            <h5 class="motto">Kitap hakkında kısa bilgiler</h5>
                                        </div>
                                        <div class="content">
                                            <div class="main" style="margin-top:40px">
                                                <h4 class="text-center">@result.Name</h4>
                                                <p class="text-center">@result.Writers.Name @result.Writers.Surname</p>
                                                <p class="text-center">@result.Categories.Name</p>
                                                <p class="text-center">@result.Publisher Yayınevi</p>
                                            </div>
                                        </div>
                                    </div> <!-- end back panel -->
                                </div> <!-- end card -->
                            </div> <!-- end card-container -->
                        </div> <!-- end col sm 3 -->
                    </div>

                }
                <div>
                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Books", new { page }))
                </div>
            </div>
        </div>
    </div>
</div>
