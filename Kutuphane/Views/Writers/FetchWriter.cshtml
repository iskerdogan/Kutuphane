@model Kutuphane.Models.Entity.Writers
@{
    ViewBag.Title = "FetchWriter";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("WriterUpdate", "Writers", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Yazar Id</label>
            @Html.TextBoxFor(p => p.Id, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div style="margin-bottom:15px">
            <label>Yazar Ad</label>
            @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
        </div>

        <div style="margin-bottom:15px">
            <label>Yazar Soyad</label>
            @Html.TextBoxFor(p => p.Surname, new { @class = "form-control" })
        </div>

        <div style="margin-bottom:15px">
            <label>Yazar Detay</label>
            @Html.TextAreaFor(p => p.Detail, new { @class = "form-control" })
        </div>
        <button class="btn btn-primary">Güncelle</button>
    </div>
}

