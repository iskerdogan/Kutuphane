@using Kutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Members>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üyeler</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Mail</th>
        <th>Kullanıcı Ad</th>
        <th>Okul</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Kitap Hareketleri</th>
    </tr>
    @foreach (Members result in Model)
    {
        <tr>
            <td>@result.Id</td>
            <td>@result.Name</td>
            <td>@result.Surname</td>
            <td>@result.Mail</td>
            <td>@result.UserName</td>
            <td>@result.School</td>
            <td><a href="~/Members/MembersDelete/@result.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="~/Members/FetchMembers/@result.Id" class="btn btn-info">Güncelle</a></td>
            <td><a href="~/Members/BookHistory/@result.Id" class="btn btn-success" style="background-color:lightseagreen">Hareketler</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

<a href="~/Members/MembersAdd" class="btn btn-primary">Üye ekle</a>
