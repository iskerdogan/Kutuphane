@model Kutuphane.Models.Entity.Members
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/Membersdashboard.cshtml";
}

<h2>Home</h2>

@using (Html.BeginForm("HomeProfile", "Memberdashboard", FormMethod.Post))
{

    <table class="table table-hover" style="margin-top:30px">
        <tr>
            <td>
                <label style="font-weight:bolder">Kütüphane Numarası:</label>
                @Html.TextBoxFor(p => p.Id, new { @class = "form-control", @readonly= "yes" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Mail adresi:</label>
                @Html.TextBoxFor(p=>p.Mail, new { @class = "form-control", @readonly = "yes" })
                @*@HttpContext.Current.User.Identity.Name*@
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Ad</label>
                @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Soyad</label>
                @Html.TextBoxFor(p => p.Surname, new { @class = "form-control" })

            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Kullanıcı ad:</label>
                @Html.TextBoxFor(p => p.UserName, new { @class = "form-control" })

            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Şifre:</label>
                @Html.TextBoxFor(p => p.Password, new { @class = "form-control" })

            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Okul:</label>
                @Html.TextBoxFor(p => p.School, new { @class = "form-control" })

            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Fotoğraf Link:</label>
                @Html.TextBoxFor(p => p.Image, new { @class = "form-control" })

            </td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-outline-warning">Güncelle</button>

            </td>
        </tr>
    </table>
}